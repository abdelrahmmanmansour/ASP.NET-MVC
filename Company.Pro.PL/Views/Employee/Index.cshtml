<a asp-action="Create" asp-controller="Employee" class="btn btn-success mb-4 shadow-sm px-4 py-2">
     Create Employee
</a>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-lg border-0 rounded-4 h-100 overflow-hidden">
                    <!-- Header Section -->
                    <div class="card-header bg-success text-white text-center py-3">
                        <div class="d-flex flex-column align-items-center">
                            <img src="~/files/images/@item.ImageName"
                                 alt="Image"
                                 class="rounded-circle border border-light shadow-sm mb-2"
                                 style="width: 90px; height: 90px; object-fit: cover;" />
                            <h5 class="mb-0 fw-bold">@item.Name</h5>
                            <small class="text-light">Joined: @item.HiringDate.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>

                    <!-- Body Section -->
                    <div class="card-body bg-light">
                        <table class="table table-sm mb-3">
                            <tbody>
                                <tr>
                                    <th class="text-muted">Age:</th>
                                    <td>@item.Age</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Email:</th>
                                    <td>@item.Email</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Phone:</th>
                                    <td>@item.Phone</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Address:</th>
                                    <td>@item.Address</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Salary:</th>
                                    <td>@item.Salary.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Created At:</th>
                                    <td>@item.CreateAt.ToString("dd/MM/yyyy")</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="mb-2">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success me-1">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary me-1">Inactive</span>
                            }

                            @if (item.IsDeleted)
                            {
                                <span class="badge bg-danger me-1">Deleted</span>
                            }
                            else
                            {
                                <span class="badge bg-primary me-1">Available</span>
                            }

                            @if (item.Department != null)
                            {
                                <span class="badge bg-info text-dark">@item.Department.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">No Department</span>
                            }
                        </div>
                    </div>

                    <!-- Footer Buttons -->
                    <div class="card-footer bg-white border-0 text-center pb-3">
                        <partial name="ThreeButtonPartialView" model="@item.Id.ToString()" />
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning mt-4 shadow-sm text-center">
        <h4>No Employees Found 😢</h4>
        <p>Try adding a new employee to get started.</p>
    </div>
}




