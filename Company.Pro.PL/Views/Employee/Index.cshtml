@if (Model.Count() > 0)
{
    <table class="table table-hover table-bordered align-middle shadow-sm rounded">
        <thead class="text-center" style="background-color: #198754; color: white;">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>Department</th>
                <th>Datails</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@item.ImageName"
                             alt="Image"
                             class="rounded-circle shadow-sm border"
                             style="width: 70px; height: 70px; object-fit: cover;" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        @if (item.IsDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Available</span>
                        }
                    </td>
                    <td>@item.HiringDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.CreateAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.Department != null)
                        {
                            <span class="badge bg-info text-dark">@item.Department.Name</span>
                        }
                        else
                        {
                            <span class="text-danger">No Department</span>
                        }
                    </td>
                    <partial name="ThreeButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>No Employees found :(</h4>
    </div>
}




