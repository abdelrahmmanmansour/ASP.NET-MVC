@model Employee


    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body px-5 py-4 bg-light">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Name" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="Age" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Age" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Email" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Phone" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Address" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="Salary" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Salary" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 d-flex align-items-center">
                    <input asp-for="IsActive" class="form-check-input me-2" disabled />
                    <label asp-for="IsActive" class="form-check-label fw-semibold text-secondary"></label>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <input asp-for="IsDeleted" class="form-check-input me-2" disabled />
                    <label asp-for="IsDeleted" class="form-check-label fw-semibold text-secondary"></label>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="HiringDate" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="HiringDate" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="CreateAt" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="CreateAt" class="form-control border-0 shadow-sm bg-white" readonly />
                </div>
            </div>

        </div>
    </div>
