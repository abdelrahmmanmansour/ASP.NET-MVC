@model Employee
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white text-center py-3 rounded-top-4"
             style="background: linear-gradient(135deg, #198754, #20c997);">
            <h3 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i> Employee Details</h3>
        </div>

        <div class="card-body px-5 py-4 bg-light">
            <partial name="Delete-Details-PartialView/_DeleteDetailsPartialView" />
        </div>

        <div class="card-footer text-center bg-white border-0 pb-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Employee"
               class="btn px-4 rounded-3 me-2 text-white"
               style="background: linear-gradient(135deg, #198754, #20c997); border: none;">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" asp-controller="Employee"
               class="btn btn-outline-secondary px-4 rounded-3">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
