@*
    Modern Auth Layout
    Author: Updated by ChatGPT (based on Colorlib)
    Uses: auth.css
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Auth Page</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/AuthStyle.css" asp-append-version="true" />
</head>
<body>
    <div class="main-agileinfo">
        <h1>@ViewData["Title"]</h1>

        <div class="agileits-top">
            @RenderBody()
        </div>

        <div class="colorlibcopy-agile">
            <p>
                © 2025 @ViewData["Title"] Form. Inspired by
                <a href="https://colorlib.com/" target="_blank">Colorlib</a>
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("ValidationSection", required: false)
</body>
</html>
