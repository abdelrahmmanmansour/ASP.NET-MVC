@model UserToReturnDto
@{
    ViewData["Title"] = "User Details";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #0d6efd;">
            <h2 class="fw-bold mb-0"><i class="bi bi-person-badge-fill me-2"></i> User Details</h2>
        </div>

        <div class="card-body p-4">
            <partial name="Delete-Details-PartialView/_DeleteDetailsPartialView" />

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="User"
                   class="btn btn-warning px-4 rounded-3 shadow-sm me-2">
                    <i class="bi bi-pencil-square me-2"></i>Edit
                </a>
                <a asp-action="Index" asp-controller="User"
                   class="btn btn-outline-secondary px-4 rounded-3 shadow-sm">
                    <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>
