@model UserToReturnDto
@{
    ViewData["Title"] = "Delete User";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #dc3545;">
            <h2 class="fw-bold mb-0"><i class="bi bi-trash3-fill me-2"></i> Delete User</h2>
        </div>

        <div class="card-body p-4" style="background-color: #f8f9fa;">
            <form asp-action="Delete" asp-controller="User">
                <partial name="Delete-Details-PartialView/_DeleteDetailsPartialView" />

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-5 rounded-3 shadow-sm me-2">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </button>
                    <a asp-action="Index" asp-controller="User"
                       class="btn btn-outline-secondary px-4 rounded-3 shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
