@model UserToReturnDto
@{
    ViewData["Title"] = "Edit User";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #0d6efd;">
            <h2 class="fw-bold mb-0"><i class="bi bi-person-lines-fill me-2"></i> Edit User</h2>
        </div>

        <div class="card-body p-4" style="background-color: #f8f9fa;">
            <form asp-action="Edit" asp-controller="User" enctype="multipart/form-data">
                <partial name="Create-Edit-PartialView/_CreateEditPartialView" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 rounded-3 shadow-sm me-2">
                        <i class="bi bi-save me-2"></i>Save
                    </button>
                    <a asp-action="Index" asp-controller="User"
                       class="btn btn-outline-secondary px-4 rounded-3 shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
