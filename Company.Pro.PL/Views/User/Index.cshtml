@model IEnumerable<UserToReturnDto>

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <!-- 🔹 Header -->
        <div class="card-header text-center text-white py-4" style="background-color: #343a40;">
            <h2 class="fw-bold mb-0">
                <i class="bi bi-people-fill me-2"></i> Users Management
            </h2>
        </div>

        <div class="card-body p-4" style="background-color: #f8f9fa;">

            <!-- 🔍 Search Section -->
            <form class="d-flex justify-content-center align-items-center gap-2 mb-5" method="get" asp-action="Index">
                <input id="SearchInput"
                       name="SearchInput"
                       class="form-control w-50 rounded-3 border shadow-sm px-3 py-2"
                       placeholder="🔍 Search users by name..." />
                <button type="submit"
                        class="btn fw-semibold text-white px-4 py-2 shadow-sm rounded-3"
                        style="background-color: #343a40; border: none;">
                    Search
                </button>
            </form>

            <!-- 🧩 Users Cards -->
            @if (Model.Any())
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border shadow-sm h-100 rounded-4 bg-white"
                                 style="transition: transform 0.2s ease, box-shadow 0.2s ease;">
                                <div class="card-header text-center text-white py-3" style="background-color: #343a40;">
                                    <h5 class="fw-bold mb-0">
                                        <i class="bi bi-person-circle me-2"></i>@item.UserName
                                    </h5>
                                </div>

                                <div class="card-body text-center p-4">
                                    <p class="mb-1"><strong>First Name:</strong> @item.FirstName</p>
                                    <p class="mb-1"><strong>Last Name:</strong> @item.LastName</p>
                                    <p class="mb-1"><strong>Email:</strong> @item.Email</p>
                                    <div class="mt-3">
                                        <strong>Roles:</strong><br />
                                        @if (item.Roles != null && item.Roles.Any())
                                        {
                                            foreach (var role in item.Roles)
                                            {
                                                <span class="badge bg-success me-1 mb-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No Roles</span>
                                        }
                                    </div>
                                </div>

                                <div class="card-footer text-center py-3 bg-light">
                                    <partial name="ThreeButtonPartialView" model="@item.Id" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border-0 text-center shadow-sm mt-4 rounded-4 py-4">
                    <i class="bi bi-person-x-fill fs-4 text-danger"></i>
                    <h5 class="fw-semibold mt-2">No users found</h5>
                    <p class="text-muted mb-0">Try adjusting your search or add new users.</p>
                </div>
            }
        </div>
    </div>
</div>
