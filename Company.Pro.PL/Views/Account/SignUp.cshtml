@model SignUpDto

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="text-danger"> </div>
        <form asp-action="SignUp">
            <input class="text" asp-for="FirstName" placeholder="First Name" required=""><br>
            <input class="text" asp-for="LastName" placeholder="Last Name" required=""><br>
            <input class="text" asp-for="UserName" placeholder="User Name" required=""><br>
            <input class="text email" asp-for="Email" placeholder="Email" required=""><br>
            <input class="text" asp-for="Password" placeholder="Password" required=""><br>
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required=""><br>

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <br>

            <input type="submit" value="SIGNUP">
        </form>
        <p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

