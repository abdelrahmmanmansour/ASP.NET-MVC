@model Department
@{
    ViewData["Title"] = "Department Details";
}

<style>
    body {
        background: linear-gradient(135deg, #e0f2fe, #f8fafc);
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .details-container {
        max-width: 600px;
        margin: 60px auto;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        padding: 35px 45px;
        border-radius: 18px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        border: 1px solid #dbeafe;
    }

    h1 {
        text-align: center;
        font-weight: 600;
        margin-bottom: 35px;
        color: #0ea5e9;
        text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }

    .btn-warning {
        background-color: #fbbf24;
        border: none;
        color: #1e293b;
        transition: 0.3s;
    }

        .btn-warning:hover {
            background-color: #f59e0b;
            color: #ffffff;
        }

    .btn-secondary {
        background-color: #94a3b8;
        border: none;
        color: white;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #64748b;
        }
</style>

<div class="details-container">
    <h1>Department Details</h1>

    <partial name="DeleteDetailsPartialView/_DeleteDetailspartialview" />

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Department" class="btn btn-warning px-4">Edit</a>
        <a asp-action="Index" asp-controller="Department" class="btn btn-secondary px-4">Back to List</a>
    </div>
</div>
