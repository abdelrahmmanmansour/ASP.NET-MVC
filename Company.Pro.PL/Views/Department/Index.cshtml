@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
    // string? ViewDataMessage = ViewData["Message"] as string; // Must be cast to string
    // string? ViewBagMessage = ViewBag.Message; // No need to cast
}

<h1 class="text-center fw-bold display-5 mb-4"
    style="background: linear-gradient(135deg, #6c63ff, #5bc0de);
           -webkit-background-clip: text;
           -webkit-text-fill-color: transparent;
           text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
           letter-spacing: 1px;">
    🗂️ All Departments
</h1>

<hr class="mb-5"
    style="width: 100px; height: 4px; background-color: #6c63ff; border: none; margin: 0 auto;" />

<br />
<br />



@* <div class="alert alert-danger">
    <p>
        @ViewData["Message"]
    </p>
</div> *@

@* <div class="alert alert-danger">
    <p>
        @ViewBagMessage
    </p>
</div> *@

@if(!string.IsNullOrEmpty(TempData["Message"]as string))
{
    <div class="alert alert-success">
        <p>
            @TempData["Message"]
        </p>
    </div>
}

<a asp-action="Create" asp-controller="Department"
   class="btn mb-4 shadow-sm px-4 py-2 text-white fw-semibold"
   style="background: linear-gradient(135deg, #6c63ff, #5bc0de); border: none;">
     Create Department
</a>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4 h-100 overflow-hidden"
                     style="background-color: #f8f9fa; transition: all 0.3s ease;">

                    <!-- Header -->
                    <div class="card-header text-center py-3"
                         style="background: linear-gradient(135deg, #6c63ff, #5bc0de); color: white;">
                        <h5 class="mb-0 fw-bold">@item.Name</h5>
                    </div>

                    <!-- Body -->
                    <div class="card-body" style="background-color: #ffffff;">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th class="text-muted">Code:</th>
                                    <td class="fw-semibold text-dark">@item.Code</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Created:</th>
                                    <td class="text-dark">@item.CreateAt.ToString("dd/MM/yyyy")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Footer Buttons -->
                    <div class="card-footer bg-light border-0 text-center pb-3">
                        <partial name="ThreeButtonPartialView" model="@item.Id.ToString()" />
                    </div>
                </div>
            </div>
        }
    </div>

    <style>
        /* تأثير بسيط عند المرور */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }
    </style>
}
else
{
    <div class="alert alert-warning mt-4 shadow-sm text-center">
        <h4>No Departments Found 😢</h4>
        <p>Try adding a new department to get started.</p>
    </div>
}
