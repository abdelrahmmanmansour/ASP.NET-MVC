@model RoleToReturnDto
@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #0d6efd;">
            <h2 class="fw-bold mb-0"><i class="bi bi-shield-lock-fill"></i> Create Role</h2>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Create" asp-controller="Role" method="post" enctype="multipart/form-data">
                <partial name="Create-Edit-PartialView/_CreateEditPartialView" />

                <div class="mt-4 d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-primary px-4 rounded-3">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                    <a asp-action="Index" asp-controller="Role" class="btn btn-outline-secondary px-4 rounded-3">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
