@model RoleToReturnDto
@{
    ViewData["Title"] = "Role Details";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #0d6efd;">
            <h2 class="fw-bold mb-0"><i class="bi bi-info-circle-fill"></i> Role Details</h2>
        </div>

        <div class="card-body px-5 py-4">
            <partial name="Delete-Details-PartialView/_DeleteDetailsPartialView" />

            <div class="mt-4 d-flex justify-content-end gap-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Role" class="btn btn-warning px-4 rounded-3">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" asp-controller="Role" class="btn btn-outline-secondary px-4 rounded-3">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
