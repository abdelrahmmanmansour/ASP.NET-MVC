@model IEnumerable<RoleToReturnDto>

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #0d6efd;">
            <h2 class="fw-bold mb-0"><i class="bi bi-shield-lock-fill me-2"></i> All Roles</h2>
        </div>

        <div class="card-body">

            <form class="d-flex align-items-center gap-2 my-3 justify-content-center">
                <input id="SearchInput"
                       name="SearchInput"
                       class="form-control w-50 rounded-3"
                       placeholder="🔍 Search by name..." />
                <button type="submit" class="btn btn-primary px-4 rounded-3">
                    Search
                </button>
            </form>

            <div class="text-center mb-4">
                <a asp-action="Create" asp-controller="Role"
                   class="btn btn-success px-4 rounded-3 shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Create Role
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="card h-100 shadow-sm border-0 rounded-4">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-gear display-4 text-primary mb-3"></i>
                                    <h5 class="card-title fw-bold">@item.Name</h5>
                                    <p class="text-muted mb-3">Role ID: @item.Id</p>

                                    <!-- احتفظنا بالبارشيال كما هو -->
                                    <partial name="ThreeButtonPartialView" model="@item.Id.ToString()" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="mt-4 alert alert-warning text-center">
                    <h5>No Roles found 🙁</h5>
                </div>
            }
        </div>
    </div>
</div>
