@model IEnumerable<RoleToReturnDto>

<h1>All Roles</h1>

<br />
<br />


<form class="d-flex align-items-center gap-2 my-3">
    <input id="SearchInput"
           name="SearchInput"
           class="form-control w-auto"
           placeholder="🔍 Search by name..." />

    <button type="submit" class="btn btn-success px-4">
        Search
    </button>
</form>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>
<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-hover table-bordered align-middle shadow-sm rounded">
        <thead class="text-center" style="background-color: #198754; color: white;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <partial name="ThreeButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>No Roles found :(</h4>
    </div>
}




