@model RoleToReturnDto
@{
    ViewData["Title"] = "Delete Role";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white py-3 rounded-top"
             style="background-color: #dc3545;">
            <h2 class="fw-bold mb-0"><i class="bi bi-trash-fill"></i> Delete Role</h2>
        </div>

        <div class="card-body px-5 py-4">
            <form asp-action="Delete" asp-controller="Role">
                <partial name="Delete-Details-PartialView/_DeleteDetailsPartialView" />

                <div class="mt-4 d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-danger px-4 rounded-3">
                        <i class="bi bi-trash3"></i> Delete
                    </button>
                    <a asp-action="Index" asp-controller="Role" class="btn btn-outline-secondary px-4 rounded-3">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
