@model List<UserInRoleDto>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-4" style="background-color: #f8f9fb;">
        <div class="card-header text-center text-white rounded-top-4" style="background-color: #0066cc;">
            <h4 class="mb-0">Manage Users in Role</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-group mb-3 p-3 rounded-3" style="background-color: #ffffff; border: 1px solid #dee2e6;">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input me-2" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label fw-semibold text-dark">
                            @Model[i].UserName
                        </label>
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                    </div>
                }

                <div class="text-center mt-4">
                    <input type="submit" value="Update" class="btn px-4 me-2 text-white shadow-sm" style="background-color: #28a745; border-color: #28a745;" />
                    <a asp-action="Edit" asp-route-id="@RoleId" class="btn px-4 shadow-sm text-white" style="background-color: #6c757d; border-color: #6c757d;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

















