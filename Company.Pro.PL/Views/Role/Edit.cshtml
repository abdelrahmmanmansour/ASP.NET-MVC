@model RoleToReturnDto
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white rounded-top-4" style="background-color: #0066cc;">
            <h3 class="mb-0 text-center">Edit Role</h3>
        </div>

        <div class="card-body p-4" style="background-color: #f8f9fb;">
            <form asp-action="Edit" asp-controller="Role" enctype="multipart/form-data">
                <partial name="Create-Edit-PartialView/_CreateEditPartialView" />

                <div class="mt-4 d-flex flex-column align-items-center gap-3">
                    <a asp-action="AddOrRemoveUser" asp-route-roleId="@Model.Id" asp-controller="Role"
                       class="btn btn-success px-4 shadow-sm">
                        <i class="bi bi-person-gear me-1"></i> Add or Remove User
                    </a>

                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">
                            <i class="bi bi-save me-1"></i> Save
                        </button>
                        <a asp-action="Index" asp-controller="Role"
                           class="btn btn-secondary px-4 shadow-sm">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
